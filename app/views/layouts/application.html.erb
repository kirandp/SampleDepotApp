<!DOCTYPE html>
<html>
<head>
<title>Pragprog Books Online Store</title>
<%= stylesheet_link_tag "depot", :media => "all" %>
 <%= javascript_include_tag "application", "jquery" %>
<%= csrf_meta_tag %>
</head>
<body id="store" >
  <div id="banner" >
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %>
  </div>
<div id="columns" >
   <div id="side" >
      <%if !@cart.nil?%>
         <%= render @cart %>
      <%end%>
      <%if !session[:user_id]%>
          <%= button_to 'Login', login_path%>
       <%end%>
   
    <% if session[:user_id] %>
     <br />
    
     <%= link_to 'Orders', orders_path %><br />
     <%= link_to 'Products', products_path %><br />
	 <%= link_to 'Users', users_path %><br />
     <br />
     <%= button_to 'Logout', logout_path, :method => :delete %>
      <% end %>
    <%= button_to 'SignUp',new_user_path,:method=>:get%>
    </div>
  </div>
<div id="main" >
<%= yield %>
</div>
</div>
</body>
</html>